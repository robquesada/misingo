<%= render 'shared/header' %>
<div class='large-12 columns'>
  <div class='row'>
    <div class='row final'></div>
    <center>
      <a class='header'>Perfil</a>
    </center>
    <hr>
    <div class='row'>
        <center>
          <div class='large-4 columns'>
            <%= render 'user_info' %>
          </div>
          <div class='large-8 columns'>
          <div class='row final'></div>
          <div class='row final'></div>
            <ul class='small-block-grid-1 large-block-grid-3'>
              <% @pets.each do |pet| %>
                <li>
                  <%= link_to image_tag(pet.avatar.url(:medium)), edit_pet_path(pet) %>
                  <div class='panel pet grid radius'>
                    <p class='marginless'><b><%= pet.name %></b></p>
                    <%= link_to 'Editar', edit_pet_path(pet) %> |
                    <%= link_to 'Eliminar', pet_path(pet), method: :delete, data: { confirm: '¿Está seguro?' } %>
                  </div>
                </li>
              <% end %>
            </ul>
          </div>
        </center>
      </div>  
  </div>
</div>
