<center>
  <div class="panel radius">
    <% if current_user.image.nil? %>
      <%= image_tag('profile_default.png', width: '150', height: '150') %>
    <% else %>
      <%= image_tag(current_user.image) %>
    <% end %>
    <label><%= current_user.name %></label>
    <label><%= current_user.hometown %></label>
  </div>
  <%= button_to 'Registrar mascota desaparecida', new_pet_path, class:"small button" %>
</center>
