<%= form_for(current_user, html: { class: 'job-manager-form' }) do |f| %>
  <%= render 'shared/flash_messages' %>

  <fieldset>
    <label>Nombre <span class="required">*</span></label>
    <div class="field">
      <%= f.text_field :name, id: 'name', class: "form-control", autofocus: true, required: true  %>
    </div>
  </fieldset>

  <fieldset>
    <label>Correo electr√≥nico <span class="required">*</span></label>
    <div class="field">
      <%= f.text_field :email, id: 'email', class: "form-control", autofocus: true, required: true  %>
    </div>
  </fieldset>

  <p>
    <%= f.submit 'Guardar', class: 'btn btn-primary', data: { disable_with: 'Guardando' } %>
  </p>
<% end %>