<% pet = lost_report.pet %>

<div class="pet-name">
  <p>Se busca <%= pet.name %> <%= link_to '(editar mascota)', edit_lost_report_path(lost_report) if current_user == lost_report.user %></p>
</div>

<fieldset class="pet-field">
  <%= image_tag("breed_icon.svg", class: "lostpet-information-detail-image") %>
  <div class="lostpet-information-detail-text">
    <b><%= pet.breed_name %></b> (<%= pet.sex %>)
  </div>
</fieldset>

<fieldset class="pet-field">
  <%= image_tag("location_icon.svg", class: "lostpet-information-detail-image") %>
  <div class="lostpet-information-detail-text">
    <b><%= lost_report.province.name %></b>. <%= lost_report.address %>
  </div>
</fieldset>

<fieldset class="pet-field">
  <%= image_tag("description_icon.svg", class: "lostpet-information-detail-image") %>
  <div class="lostpet-information-detail-text">
    <%= lost_report.description %>
  </div>
</fieldset>

<fieldset class="pet-field">
  <%= image_tag("phone_icon.svg", class: "lostpet-information-detail-image") %>
  <div class="lostpet-information-detail-text">
    <b><%= lost_report.phone_numbers.join(' / ') %></b> (con <%= lost_report.owner %>)
  </div>
</fieldset>
