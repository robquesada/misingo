<header class="header header-menu-fullw">
  <% if current_user.nil? %>
    <div class="header-top">
      <div class="container">
        <div class="header-top-left">
          <ul class="header-top-nav">
            <li><%= link_to 'Desapariciones', lost_reports_path %></li>
            <li><%= link_to 'Adopciones', adoptions_path %></li>
            <li><%= link_to 'Contacto', '/contacto' %></li>
          </ul>
        </div>
        <div class="header-top-right">
          <span class="register">
            ¿Tenés cuenta?
            <%= link_to 'Iniciar', new_user_session_path, class: "btn btn-sm btn-warning" %>
            <%= button_to 'Ingresar con Facebook', user_omniauth_authorize_path(:facebook), class: "btn btn-sm btn-warning facebook" %>
          </span>
        </div>
      </div>
    </div>
  <% else %>
    <div class="header-top">
      <div class="container">
        <div class="header-top-left">
          <ul class="header-top-nav">
            <li><%= link_to 'Desapariciones', lost_reports_path %></li>
            <li><%= link_to 'Adopciones', adoptions_path %></li>
            <li><%= link_to 'Contacto', '/contacto' %></li>
          </ul>
        </div>
        <div class="header-top-right">
          <div class="user-info">
            <%= link_to 'Nuevo extravío', new_lost_report_path, class: "btn btn-sm btn-warning" %>
            <%= link_to 'Nueva adopción', new_adoption_path, class: "btn btn-sm btn-warning" %>
            <% image = current_user.image.nil? ? 'profile_default.png' : current_user.image %>
            <%= link_to current_user.name, user_path(current_user) %>
            <%= link_to image_tag(image, class:'small-picture'), user_path(current_user) %>
            <%= link_to "Cerrar sesión", destroy_user_session_path, method: :delete %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="header-main">
    <% if !@header_main %>
      <div class="container">
        <!-- Logo -->
        <div class="logo">
          <%= link_to root_path do %>
            <%= image_tag('https://s3.amazonaws.com/mascotaproject/misingo_logo_small.svg') %>
          <% end %>
        </div>
        <!-- Logo / End -->
        <button type="button" class="navbar-toggle">
          <i class="fa fa-bars"></i>
        </button>
        <!-- Banner -->
        <div class="head-info">
          <ul class="head-info-list">
            <li><span>Adopciones y mascotas desaparecidas </span>en Costa Rica</li>
          </ul>
          <ul class="social-links">
            <li>
              <%= link_to 'https://www.facebook.com/misingocom', target: '_blank' do %><i class="fa fa-facebook"></i><% end %>
            </li>
            <li>
              <%= link_to 'https://www.twitter.com/misingocom', target: '_blank' do %><i class="fa fa-twitter"></i><% end %>
            </li>
<!--             <li>
              <%= link_to 'https://www.instagram.com/misingocom', target: '_blank' do %><i class="fa fa-instagram"></i><% end %>
            </li> -->
          </ul>
        </div>
        <!-- Banner / End -->
      </div>
    <% end %>
  </div>

  <%= render 'shared/mobile_nav_bar' %>
</header>
