<%= form_for @pet do |f| %>
    <% if @pet.errors.any? %>
      <div id="error_explanation">
        <div data-alert class="alert-box alert radius">
            Lo sentimos, no se pudo guardar la información:
            <% @pet.errors.full_messages.each do |msg| %>
              <br><%= msg %>
            <% end %>
          <a href="#" class="close">&times;</a>
        </div>
      </div>
    <% end %>
    <div class="panel">
      <% if !@editing %>
        <label>Subí una foto de perfil</label>
      <% else %>
        <label>Cambiar la foto de perfil</label>
      <% end %>
      <div style="width:151px; height:151px; border:1px solid">
        <% if @editing %>
          <center><%= image_tag @pet.avatar.url(:profile), id:"image" %></center>
        <% else %>
          <center><img id="image"></img></center>
        <% end %>
      </div>
      <%= f.file_field :avatar, class: "image-selector" %>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <%= f.text_field :name, placeholder: "Nombre" %>
      </div>
      <div class="large-6 columns">
        <%= f.radio_button :sex, 'Macho', text:'sd', checked: true %><label>Es macho</label>
        <%= f.radio_button :sex, 'Hembra'%><label>Es hembra</label>
      </div>
    </div>
    <div class="row">
      <div class="large-6 columns">
        <label>Animal
          <%= collection_select(:pet, :animal_type_id, AnimalType.all, :id, :name, {}, {:id=>'animal-type-selector'}) %>
        </label>
      </div>
      <div class="large-6 columns">
        <label>Raza
          <div id = "test-js">
            <%= collection_select(:pet, :breed_id, @breed, :id, :name, {}, {:id=>'breeds'}) %>
          </div>
        </label>
      </div>
    </div>
    <%= f.hidden_field :is_lost, :value => @lost %>
    <% if @lost %>
      <br><%= f.submit "Aceptar e ir a registrar datos de la desaparición", class: "secondary small button right" %>
    <% else %>
      <br><%= f.submit "Aceptar", class: "secondary small button right" %>
    <% end %>
<% end %>