<%= render "shared/header" %>
<div class="large-12 columns">
    <div class="row">
      <br>
        <center>
            <a class="header">Mis mascotas</a>
        </center>
      <hr><br>
        <div class="row">
            <center>
              <div class="large-1 columns">
                <br>
              </div>
                <div class="large-10 columns left">
                    <ul class="small-block-grid-3">
                        <% @pets.each do |pet| %>
                            <li><a href="#"><%= image_tag pet.avatar.url(:medium) %></a>
                            <p>Nombre: <%= pet.name %> <%= link_to 'Editar', edit_pet_path(pet) %>
                            <%= link_to 'Eliminar', pet_path(pet), method: :delete, data: { confirm: 'Esta seguro?' } %></p></li>
                        <% end %>
                    </ul>
                    <%= link_to 'Registra otra de tus mascotas', new_pet_path %>
                </div>
            </center>
        </div>
    </div>
</div>