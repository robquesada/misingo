<div class="large-10 columns">
  <ul class="small-block-grid-1 large-block-grid-3">
    <% @lost_reports.each_with_index do |lost, i| %>
      <li>
        <% pet = lost.pet %>
            <%= link_to image_tag(pet.avatar.url(:medium)), pet_lost_report_path(pet) %>
            <div class="panel pet grid radius">
            <%= link_to(pet_lost_report_path(lost.pet)) do %>
              <h3>SE BUSCA <b><%= pet.name.upcase %></b></h3>
            <% end %>
            <div class="row">
              <%= render partial: 'shared/social_shares',
              locals: { url: pet_lost_report_url(lost) } %>
              <p>Perdido en <b><%= lost.province.name %></b></p>
              <dl class="accordion" data-accordion>
                <dd class="accordion-navigation">
                  <a href='#panel<%= i %>', class="accordion">Ver informaci√≥n</a>
                  <div id='panel<%= i %>', class="content">
                    <%= render partial: 'shared/lost_pet_info', locals: { lost: lost } %>
                  </div>
                </dd>
              </dl>
            </div>
        </div>
      <% end %>
    </li>
  </ul>
</div>
