<div class="large-12 columns">
  <div class="row">
    <div class="row final">
    <h3>Iniciar sesión</h3>
    <hr>
    <div class="large-6 columns about-box">
      <div class="panel">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.email_field :email, placeholder:"E-mail", autofocus: true %>
          <%= f.password_field :password, placeholder: "Contraseña", autocomplete: "off" %>
          <% if devise_mapping.rememberable? %>
            <%= f.check_box :remember_me %> <%= f.label "Recordar mis datos" %>
          <% end %>
          <%= f.submit "Iniciar", class: "button expand [radius round]" %>
        <% end %>
        <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
          <%= link_to "¿Olvidó su contraseña?", new_password_path(resource_name) %>
        <% end %>
      </div>
    </div>
    <div class="large-6 columns">
      <div class="panel">
        <p>¿No tiene cuenta?</p>
        <% if devise_mapping.registerable? && controller_name != 'registrations' %>
          <%= link_to "Crear cuenta", new_registration_path(resource_name) %>
        <% end %>
        <p class="marginless"></p>
        <div class="row final"></div>
        <%= link_to "Ingresar con tu cuenta de Facebook", user_omniauth_authorize_path(:facebook) %>
      </div>
    </div>
  </div>
</div>
