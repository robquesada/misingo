<div class="large-12 columns">
    <div class="row">
        <br>
        <h3>Iniciar sesión</h3>
        <hr>
          <div class="panel">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <%= f.email_field :email, placeholder:"E-mail", autofocus: true %>
              <%= f.password_field :password, placeholder: "Contraseña", autocomplete: "off" %>
          
              <% if devise_mapping.rememberable? -%>
                <div><%= f.check_box :remember_me %> <%= f.label "Recordar mis datos" %></div>
              <% end -%>
          
              <div><%= f.submit "Iniciar", class: "button" %></div>
            <% end %>
          
            <%= render "devise/shared/links" %>
          </div>
    </div>
</div>