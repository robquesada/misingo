<% content_for :facebook_meta_tags do %>
  <%= render 'shared/facebook_meta_tags' %>
  <meta property="og:url" content="<%= request.base_url + adoption_path(@adoption) %>" />
  <meta property="og:title" content="ยก<%= @adoption.pet.name %> busca un hogar!" />
  <meta property="og:description" content="<%= @adoption.description %>. Llamar al <%= @adoption.phone_numbers.join(' / ') %>" />
  <meta property="og:image" content="<%= @adoption.pet.avatar.url(:preview) %>" />
<% end %>
<% content_for :twitter_meta_tags do %>
  <%= render 'shared/twitter_meta_tags' %>
  <meta name="twitter:title" content="ยก<%= @adoption.pet.name %> busca un hogar! | Misingo">
  <meta name="twitter:description" content="<%= @adoption.description %>. Llamar al <%= @adoption.phone_numbers.join(' / ') %>">
  <meta name="twitter:image" content="<%= @adoption.pet.avatar.url(:preview) %>">
<% end %>
